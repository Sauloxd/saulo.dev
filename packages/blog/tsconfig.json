{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowJs": true,
    "noEmit": true,
    "jsx": "react",
    "module": "esnext",
    "lib": ["es2017", "esnext", "dom"],
    "types": ["react"],
  },
  "include": ["src/**/*", "../../node_modules/@saulo.dev/ui/src/**/*"],
  "exclude": [
    "node_modules"
  ]
}